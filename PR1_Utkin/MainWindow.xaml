<Window x:Class="PR1_Utkin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_Utkin"
        mc:Ignorable="d"
        Title="//Уткин//" Height="250" Width="500" Background="LightBlue">
    <StackPanel>
        <TextBlock Text="Авторизация" FontSize="30" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="100,30,0,0">
                <TextBlock Text="Почта:" FontSize="15"/>
                <TextBlock Text="Пароль:" FontSize="15" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="50,30,0,0">
                <TextBox Width="150" FontSize="15"/>
                <TextBox  FontSize="15" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
        <Button Margin="30" Content="Войти в аккаунт" FontSize="15"/>
    </StackPanel>
</Window>
